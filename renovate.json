{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "addLabels": [
    "dependencies"
  ],
  "reviewersFromCodeOwners": true,
  "dependencyDashboard": true,
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "npm": {
    "minimumReleaseAge": "3 days"
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ]
    }
  ],
  "prConcurrentLimit": 4
}
